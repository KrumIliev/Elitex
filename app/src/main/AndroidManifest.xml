<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tma.elitex" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SignInActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoadActivity" android:screenOrientation="landscape" />
        <activity android:name=".WorkActivity" android:screenOrientation="landscape" />
        <activity android:name=".reference.ReferenceActivity" android:screenOrientation="landscape" />

        <service android:name=".server.ServerConnectionService" android:exported="false" />
    </application>

</manifest>
